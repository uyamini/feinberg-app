<!DOCTYPE html>
<html>
<head>
    <title>Database Results</title>
    <link href="/css/output.css" rel="stylesheet">
</head>
<body class="m-4">
    <h1 class="text-xl font-bold mb-4">Database Query Results</h1>
    <% if (results && results.length > 0) { %>
        <table class="table-auto border-collapse border border-gray-400">
            <thead>
                <tr>
                    <% Object.keys(results[0]).forEach(function(column) { %>
                        <th class="border border-gray-300 px-4 py-2 text-gray-600"><%= column %></th>
                    <% }); %>
                </tr>
            </thead>
            <tbody>
                <% results.forEach(function(row) { %>
                    <tr>
                        <% Object.values(row).forEach(function(value) { %>
                            <td class="border border-gray-300 px-4 py-2"><%= value %></td>
                        <% }); %>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No data found.</p>
    <% } %>
</body>
</html>
